{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,

    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-jsx",

    "types": ["electron", "node"]
  },
  "include": ["src/**/*", "electron/**/*", "preload.ts", "@types"],
  "exclude": ["node_modules", "dist"]
}
